@using Drinks.Models.Entities
@model Order
@{
    ViewData["Title"] = "Спасибо за покупку!";
    var changeAmount = ViewBag.ChangeAmount as decimal? ?? 0;
    var changeCoins = ViewBag.ChangeCoins as Dictionary<int, int> ?? new Dictionary<int, int>();
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-success"><i class="bi bi-check-circle-fill me-2"></i>Спасибо за покупку!</h2>
        <h4>Пожалуйста, возьмите вашу сдачу:</h4>
        <h3 class="text-success">@changeAmount.ToString("0.00") руб.</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="mb-4">Ваши монеты:</h5>
                    @foreach (var coin in changeCoins.OrderBy(c => c.Key))
                    {
                        <div class="d-flex gap-5 align-items-center mb-3 px-4">
                            <span class="fs-4 rounded-circle border border-secondary p-2" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                @coin.Key
                            </span>
                            <span class="fs-5">@coin.Value шт.</span>
                        </div>
                    }
                    <a href="/" class="btn btn-warning mt-4">Каталог напитков</a>
                </div>
            </div>
        </div>
    </div>
</div>
